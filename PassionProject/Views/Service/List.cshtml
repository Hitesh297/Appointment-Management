@model IEnumerable<PassionProject.Models.ServiceDto>

@{
    ViewBag.Title = "List";
}

<h2>Service List</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Duration)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cost)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Duration) min
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cost)
        </td>
        <td style="display: flex; gap: 5px; flex-wrap: wrap; justify-content: center;">
            @Html.ActionLink("Edit", "Edit", new { id=item.ServiceId }, new { @class = "btn btn-primary", @style = "flex-grow:1; max-width:70px;" }) 
            @Html.ActionLink("Details", "Details", new { id=item.ServiceId }, new { @class = "btn btn-info", @style = "flex-grow:1; max-width:70px;" }) 
            @Html.ActionLink("Delete", "ConfirmDelete", new { id=item.ServiceId }, new { @class = "btn btn-danger", @style = "flex-grow:1; max-width:70px;" })
        </td>
    </tr>
}

</table>
